<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>AdminLTE | Dashboard</title>
    @Styles.Render("~/Content/admin_style")
    @RenderSection("head1", required: false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    @Scripts.Render("~/bundles/html5forie8")       
    <![endif]-->
</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="/Board/Index" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            AdminLTE
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                   
                
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span> @Session["real_name"] <i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header bg-light-blue">
                                <img src="~/Uploads/@Session["image_url"]" class="img-circle" alt="User Image" />
                                <p>
                                    @Session["real_name"] @Session["title"]
                                    @*<small>Member since Nov. 2012</small>*@
                                </p>
                            </li>
                            <!-- Menu Body -->
                            @*<li class="user-body">
                                <div class="col-xs-4 text-center">
                                    <a href="#">Followers</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Sales</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Friends</a>
                                </div>
                            </li>*@
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="/User/UserProfile" class="btn btn-default btn-flat"> 个 人 设 置 </a>
                                </div>
                                <div class="pull-right">
                                    <a href="/Login/Logout" class="btn btn-default btn-flat"> 注 销 </a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">                        
                        <img src='~/Uploads/@Session["image_url"]' class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>您好, @Session["real_name"]</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                
                <!-- sidebar menu: : style can be found in sidebar.less -->
                @{ 
                    string t1 = "treeview";
                    string t21 = "";
                    string t22 = "";
                    string t23 = "";

                    if(Request.Url.ToString().IndexOf("/Permission", StringComparison.OrdinalIgnoreCase) !=-1
                        || Request.Url.ToString().IndexOf("/Role", StringComparison.OrdinalIgnoreCase) != -1
                        || Request.Url.ToString().IndexOf("/User", StringComparison.OrdinalIgnoreCase) != -1
                        )
                    {
                        t1 = "treeview active";
                    }
                    if(Request.Url.ToString().IndexOf("/Permission/Index", StringComparison.OrdinalIgnoreCase) != -1|| Request.Url.ToString().EndsWith("/Permission",StringComparison.OrdinalIgnoreCase))
                    {
                        t21 = "active";
                    }
                    if (Request.Url.ToString().IndexOf("/Role/Index", StringComparison.OrdinalIgnoreCase) != -1 || Request.Url.ToString().EndsWith("/Role", StringComparison.OrdinalIgnoreCase))
                    {
                        t22 = "active";
                    }
                    if (Request.Url.ToString().IndexOf("/User/Index",StringComparison.OrdinalIgnoreCase) != -1 || Request.Url.ToString().EndsWith("/User", StringComparison.OrdinalIgnoreCase))
                    {
                        t23 = "active";
                    }


                    string t3 = "treeview";
                    string t41 = "";
                    string t42 = "";

                    if (Request.Url.ToString().IndexOf("/OpLog", StringComparison.OrdinalIgnoreCase) != -1
                        || Request.Url.ToString().IndexOf("/LoginLog", StringComparison.OrdinalIgnoreCase) != -1
                        )
                    {
                        t3 = "treeview active";
                    }
                    if (Request.Url.ToString().IndexOf("/OpLog/Index", StringComparison.OrdinalIgnoreCase) != -1 || Request.Url.ToString().EndsWith("/OpLog", StringComparison.OrdinalIgnoreCase))
                    {
                        t41 = "active";
                    }
                    if (Request.Url.ToString().IndexOf("/LoginLog/Index", StringComparison.OrdinalIgnoreCase) != -1 || Request.Url.ToString().EndsWith("/LoginLog", StringComparison.OrdinalIgnoreCase))
                    {
                        t42 = "active";
                    }                    
                }
                <ul class="sidebar-menu">                
                    <li class="@t1">
                        <a href="#">
                            <i class="fa fa-folder"></i> <span>用户及权限</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@t21"><a href="/Permission/Index"><i class="fa fa-angle-double-right"></i> 权限列表</a></li>
                            <li class="@t22"><a href="/Role/Index"><i class="fa fa-angle-double-right"></i> 角色列表</a></li>
                            <li class="@t23"><a href="/User/Index"><i class="fa fa-angle-double-right"></i> 用户列表</a></li>                            
                        </ul>                     
                    </li>
                    <li class="@t3">
                        <a href="#">
                            <i class="fa fa-folder"></i> <span>日志</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@t41"><a href="/OpLog/Index"><i class="fa fa-angle-double-right"></i> 操作日志</a></li>
                            <li class="@t42"><a href="/LoginLog/Index"><i class="fa fa-angle-double-right"></i> 登录日志</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            @RenderBody()
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- AdminLTE App -->
    @Scripts.Render("~/bundles/app")    
  
    @RenderSection("scripts", required: false)
</body>
</html>
